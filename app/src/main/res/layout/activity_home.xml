<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8EB2C4"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginBottom="44dp"
        android:text="Email"
        app:layout_constraintBottom_toTopOf="@+id/providerTextView"
        app:layout_constraintEnd_toEndOf="@+id/iv1"
        app:layout_constraintStart_toStartOf="@+id/iv1" />

    <TextView
        android:id="@+id/providerTextView"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginBottom="40dp"
        android:text="Provider"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/btnEntrar"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="155dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="192dp"
        android:backgroundTint="@color/dark_blue"
        android:text="Entrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/logOutButton2"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="155dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="132dp"
        android:backgroundTint="@color/dark_blue"
        android:text="Cerrar sesiÃ³n"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="346dp"
        android:layout_height="183dp"
        android:layout_marginTop="76dp"
        android:src="@drawable/sneakers"
        app:layout_constraintBottom_toTopOf="@+id/emailTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.301" />


</androidx.constraintlayout.widget.ConstraintLayout>