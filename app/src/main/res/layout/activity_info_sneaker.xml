<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#858585"
    tools:context=".InfoSneakerActivity">

    <ImageView
        android:id="@+id/imagen"
        android:layout_width="370dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:elevation="4dp"
        android:background="@drawable/banner_background"
        android:layout_below="@+id/imagen">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Zapatilla"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_below="@+id/imagen"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/retail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio retail: 200€"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:layout_below="@+id/name"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/resell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio Resell: 300€"
            android:textColor="@color/white"
            android:layout_below="@+id/retail"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/color1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="color1/"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/resell"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"  />

            <TextView
                android:id="@+id/color2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="color2"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/color1"
                android:layout_below="@+id/resell"
                android:textSize="15sp"  />

            <TextView
                android:id="@+id/marca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marca: Nike"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/color2"
                android:layout_below="@+id/resell"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="5dp"
                android:textSize="15sp"  />

            <TextView
                android:id="@+id/modelo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modelo: Jodan 1"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/marca"
                android:layout_below="@+id/resell"
                android:layout_marginLeft="25dp"
                android:textSize="15sp"  />
        </LinearLayout>


        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de lanzamiento: 01/12/2022"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/color1"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"  />



        <TextView
            android:id="@+id/titleDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_below="@+id/date"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textSize="20sp"  />

        <TextView
            android:id="@+id/textDescription"
            android:layout_width="330dp"
            android:layout_height="215dp"
            android:text="Texto descripción de la zapatilla"
            android:textColor="@color/white"
            android:layout_below="@+id/titleDescription"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="15sp"  />


    </LinearLayout>




</RelativeLayout>